@page "{id}"
@model EditSessionModel
@{
    ViewData["Title"] = "Edit Session";
}

<div class="border-bottom mb-3">
    <h3>Edit Session</h3>
</div>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>   
        </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Session.Id" type="hidden" />
    <input asp-for="Session.TrackId" type="hidden" />

    <div class="form-floating mb-3 col-6">
        <input asp-for="Session.Title" class="form-control" />
        <label asp-for="Session.Title"></label>
        <span asp-validation-for="Session.Title" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3 col-6">
        <textarea asp-for="Session.Abstract" class="form-control" style="height:200px;"></textarea>
        <label asp-for="Session.Abstract"></label>
        <span asp-validation-for="Session.Abstract" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3 col-3">
        <input asp-for="Session.StartTime" class="form-control" />
        <label asp-for="Session.StartTime"></label>
        <span asp-validation-for="Session.StartTime" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3 col-3">
        <input asp-for="Session.EndTime" class="form-control" />
        <label asp-for="Session.EndTime"></label>
        <span asp-validation-for="Session.EndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <button type="submit" class="w-25 btn btn-outline-primary">Save</button>
            <button type="submit" asp-page-handler="Delete" class="w-25 btn btn-outline-danger">Delete</button>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}